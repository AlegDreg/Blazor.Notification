@using UI.Interfaces
@inherits LayoutComponentBase
@inject IAppInitializer appInitializer
@inject IJsService js

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

@Body

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await appInitializer.InitAsync();
        }
        catch (Exception ex)
        {
            await js.SendError(ex.Message, "Ошибка подключения");
        }
    }
}